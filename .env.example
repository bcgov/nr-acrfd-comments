# Root .env file for Docker Compose
# Used by docker-compose.yml for service configuration

# ===== MONGODB =====
MONGODB_USER=admin
MONGODB_PASSWORD=nrts-dev
MONGODB_DATABASE=nrts-dev

# ===== BACKEND =====
NODE_ENV=development
API_HOSTNAME=localhost:3000
API_PORT=3000
UPLOAD_DIRECTORY=./uploads/

# ===== FRONTEND =====
BACKEND_URL=http://localhost:3000
FRONTEND_PORT=3000
ADMIN_PORT=4200

# ===== AUTHENTICATION: KEYCLOAK =====
# Set to 'false' for local development (uses local JWT signing)
# Set to 'true' for production (uses remote Keycloak)
KEYCLOAK_ENABLED=false

# Local JWT Secret (used when KEYCLOAK_ENABLED=false)
# Generate a secure secret: openssl rand -base64 32
SECRET=defaultSecret

# ===== REMOTE KEYCLOAK CONFIGURATION =====
# Used when KEYCLOAK_ENABLED=true

# DEV environment:
SSO_ISSUER=https://dev.oidc.gov.bc.ca/auth/realms/prc
SSO_JWKSURI=https://dev.oidc.gov.bc.ca/auth/realms/prc/protocol/openid-connect/certs

# TEST environment (uncomment and use instead of DEV):
# SSO_ISSUER=https://test.oidc.gov.bc.ca/auth/realms/prc
# SSO_JWKSURI=https://test.oidc.gov.bc.ca/auth/realms/prc/protocol/openid-connect/certs

# PROD environment (uncomment and use instead of DEV):
# SSO_ISSUER=https://oidc.gov.bc.ca/auth/realms/prc
# SSO_JWKSURI=https://oidc.gov.bc.ca/auth/realms/prc/protocol/openid-connect/certs
